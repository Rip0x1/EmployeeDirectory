@page
@model EmployeeDirectory.Pages.Users.ManageModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-user-shield me-2"></i>Управление пользователями</h2>
        <a asp-page="/Users/Create" asp-route-returnUrl="/Users/Manage" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>Добавить пользователя
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <div class="table-container">
                    <table class="table mb-0">
                        <thead class="table-dark sticky-header">
                            <tr>
                                <th class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important; border-bottom: 2px solid rgb(33, 37, 41) !important;">Логин</th>
                                <th class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important; border-bottom: 2px solid rgb(33, 37, 41) !important;">Полное имя</th>
                                <th class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important; border-bottom: 2px solid rgb(33, 37, 41) !important;">Отдел</th>
                                <th class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important; border-bottom: 2px solid rgb(33, 37, 41) !important;">Роль</th>
                                <th class="text-center" style="border-bottom: 2px solid rgb(33, 37, 41) !important;">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important;">@user.UserName</td>
                                <td class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important;">@(user.FullName ?? "-")</td>
                                <td class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important;">@(user.Department?.Name ?? "-")</td>
                                <td class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important;">
                                    @if (user.Roles.Contains("Administrator"))
                                    {
                                        <span class="badge bg-danger">Администратор</span>
                                    }
                                    else if (user.Roles.Contains("Manager"))
                                    {
                                        <span class="badge bg-warning text-dark">Начальник отдела</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Пользователь</span>
                                    }
                                </td>
                                <td class="text-center" style="">
                                    <div class="btn-group" role="group">
                                        <a asp-page="/Users/Edit" asp-route-id="@user.Id" asp-route-returnUrl="/Users/Manage" class="btn btn-sm btn-outline-warning" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="/Users/Delete" asp-route-id="@user.Id" asp-route-returnUrl="/Users/Manage" class="btn btn-sm btn-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

