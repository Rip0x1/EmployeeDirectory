@page
@model EmployeeDirectory.Pages.Admin.ImportExportModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]
@{
    ViewData["Title"] = "Импорт/Экспорт данных";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Errors"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Errors"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-exchange-alt me-2"></i>Импорт/Экспорт данных</h2>
                <div class="d-flex gap-2">
                    <a asp-page="/Admin/Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Назад к списку
                    </a>
                </div>
            </div>

            <h3 class="mb-3"><i class="fas fa-users me-2"></i>Сотрудники</h3>

            <div class="row g-4">
                <div class="col-md-4 d-flex">
                    <div class="card shadow-sm w-100 d-flex flex-column">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-file-export me-2"></i>Экспорт данных</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="text-muted">Экспорт всех данных сотрудников в различные форматы</p>
                            <div class="d-grid gap-2 mt-auto">
                                <a asp-page-handler="ExportJson" class="btn btn-success">
                                    <i class="fas fa-file-code me-2"></i>Экспорт в JSON
                                </a>
                                <a asp-page-handler="ExportCsv" class="btn btn-info">
                                    <i class="fas fa-file-csv me-2"></i>Экспорт в CSV
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 d-flex">
                    <div class="card shadow-sm w-100 d-flex flex-column">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-file-import me-2"></i>Импорт JSON</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="text-muted">Импорт данных из JSON файла</p>
                            
                            <form method="post" asp-page-handler="ImportJson" enctype="multipart/form-data" class="d-flex flex-column flex-grow-1">
                                <div class="mb-3">
                                    <label for="jsonFile" class="form-label">Файл JSON</label>
                                    <input type="file" class="form-control" id="jsonFile" name="file" accept=".json" required>
                                </div>
                                <button type="submit" class="btn btn-success w-100 mt-auto">
                                    <i class="fas fa-upload me-2"></i>Импорт из JSON
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 d-flex">
                    <div class="card shadow-sm w-100 d-flex flex-column">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-file-import me-2"></i>Импорт CSV</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="text-muted">Импорт данных из CSV файла</p>
                            
                            <form method="post" asp-page-handler="ImportCsv" enctype="multipart/form-data" class="d-flex flex-column flex-grow-1">
                                <div class="mb-3">
                                    <label for="csvFile" class="form-label">Файл CSV</label>
                                    <input type="file" class="form-control" id="csvFile" name="file" accept=".csv" required>
                                </div>
                                <button type="submit" class="btn btn-info w-100 mt-auto">
                                    <i class="fas fa-upload me-2"></i>Импорт из CSV
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <h3 class="mb-3 mt-5"><i class="fas fa-user-shield me-2"></i>Пользователи</h3>

            <div class="row g-4">
                <div class="col-md-4 d-flex">
                    <div class="card shadow-sm w-100 d-flex flex-column">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0"><i class="fas fa-file-export me-2"></i>Экспорт пользователей</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="text-muted">Экспорт всех пользователей в различные форматы</p>
                            <div class="d-grid gap-2 mt-auto">
                                <a asp-page-handler="ExportUsersJson" class="btn btn-success">
                                    <i class="fas fa-file-code me-2"></i>Экспорт в JSON
                                </a>
                                <a asp-page-handler="ExportUsersCsv" class="btn btn-info">
                                    <i class="fas fa-file-csv me-2"></i>Экспорт в CSV
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 d-flex">
                    <div class="card shadow-sm w-100 d-flex flex-column">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-file-import me-2"></i>Импорт пользователей JSON</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="text-muted">Импорт пользователей из JSON файла</p>
                            
                            <form method="post" asp-page-handler="ImportUsersJson" enctype="multipart/form-data" class="d-flex flex-column flex-grow-1">
                                <div class="mb-3">
                                    <label for="usersJsonFile" class="form-label">Файл JSON</label>
                                    <input type="file" class="form-control" id="usersJsonFile" name="file" accept=".json" required>
                                </div>
                                <button type="submit" class="btn btn-success w-100 mt-auto">
                                    <i class="fas fa-upload me-2"></i>Импорт из JSON
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 d-flex">
                    <div class="card shadow-sm w-100 d-flex flex-column">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-file-import me-2"></i>Импорт пользователей CSV</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="text-muted">Импорт пользователей из CSV файла</p>
                            
                            <form method="post" asp-page-handler="ImportUsersCsv" enctype="multipart/form-data" class="d-flex flex-column flex-grow-1">
                                <div class="mb-3">
                                    <label for="usersCsvFile" class="form-label">Файл CSV</label>
                                    <input type="file" class="form-control" id="usersCsvFile" name="file" accept=".csv" required>
                                </div>
                                <button type="submit" class="btn btn-info w-100 mt-auto">
                                    <i class="fas fa-upload me-2"></i>Импорт из CSV
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


