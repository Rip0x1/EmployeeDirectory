@page
@model PrintLogsModel
@{
    ViewData["Title"] = "Печать логов";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Логи системы - @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background: white;
            color: #333;
        }
        
        .print-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 3px solid #6f42c1;
            padding-bottom: 20px;
        }
        
        .print-header h1 {
            color: #6f42c1;
            margin: 0;
            font-size: 28px;
        }
        
        .print-header .subtitle {
            color: #666;
            margin-top: 10px;
            font-size: 16px;
        }
        
        .print-info {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #6f42c1;
        }
        
        .print-info p {
            margin: 5px 0;
            font-size: 14px;
        }
        
        .logs-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            font-size: 12px;
        }
        
        .logs-table th {
            background: linear-gradient(45deg, #6f42c1, #5a2d91);
            color: white;
            padding: 12px 8px;
            text-align: center;
            font-weight: bold;
            border: 1px solid #5a2d91;
        }
        
        .logs-table td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: center;
            vertical-align: top;
        }
        
        .logs-table tr:nth-child(even) {
            background-color: #f8f9fa;
        }
        
        .logs-table tr:hover {
            background-color: #e9ecef;
        }
        
        .action-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 10px;
            font-weight: bold;
            text-transform: uppercase;
        }
        
        .action-create { background: #d4edda; color: #155724; }
        .action-update { background: #fff3cd; color: #856404; }
        .action-delete { background: #f8d7da; color: #721c24; }
        .action-login { background: #cce5ff; color: #004085; }
        
        .entity-badge {
            display: inline-block;
            padding: 3px 6px;
            border-radius: 3px;
            font-size: 10px;
            background: #e9ecef;
            color: #495057;
        }
        
        .details-cell {
            max-width: 200px;
            word-wrap: break-word;
            text-align: left;
        }
        
        .no-data {
            text-align: center;
            padding: 40px;
            color: #666;
            font-style: italic;
        }
        
        @@media print {
            body { margin: 0; padding: 15px; }
            .print-header { page-break-after: avoid; }
            .logs-table { page-break-inside: auto; }
            .logs-table tr { page-break-inside: avoid; }
        }
    </style>
</head>
<body>
    <div class="print-header">
        <h1><i class="fas fa-clipboard-list"></i> Логи системы</h1>
        <div class="subtitle">Отчет сгенерирован: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</div>
    </div>

    <div class="print-info">
        <p><strong>Период:</strong> 
            @if (Model.From.HasValue && Model.To.HasValue)
            {
                <text>с @Model.From.Value.ToString("dd.MM.yyyy") по @Model.To.Value.ToString("dd.MM.yyyy")</text>
            }
            else if (Model.From.HasValue)
            {
                <text>с @Model.From.Value.ToString("dd.MM.yyyy")</text>
            }
            else if (Model.To.HasValue)
            {
                <text>по @Model.To.Value.ToString("dd.MM.yyyy")</text>
            }
            else
            {
                <text>все время</text>
            }
        </p>
        <p><strong>Фильтр:</strong> @(string.IsNullOrEmpty(Model.Q) ? "все записи" : Model.Q)</p>
        <p><strong>Всего записей:</strong> @Model.Items.Count</p>
    </div>

    @if (Model.Items.Any())
    {
        <table class="logs-table">
            <thead>
                <tr>
                    <th style="width: 15%;">Дата/время</th>
                    <th style="width: 15%;">Пользователь</th>
                    <th style="width: 10%;">Действие</th>
                    <th style="width: 15%;">Сущность</th>
                    <th style="width: 45%;">Детали</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Items)
                {
                    <tr>
                        <td>@log.TimestampUtc.ToString("dd.MM.yyyy HH:mm:ss")</td>
                        <td>@(log.UserName ?? "Система")</td>
                        <td>
                            <span class="action-badge action-@log.Action.ToLower()">@log.Action</span>
                        </td>
                        <td>
                            <span class="entity-badge">@log.EntityType</span>
                            @if (!string.IsNullOrEmpty(log.EntityId))
                            {
                                <br><small>ID: @log.EntityId</small>
                            }
                        </td>
                        <td class="details-cell">@log.Details</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-data">
            <h3>Нет данных для отображения</h3>
            <p>По выбранным критериям логи не найдены.</p>
        </div>
    }
</body>
</html>
