@page
@model LoginModel
@{
    ViewData["Title"] = "Вход в систему";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 mt-5">
                <div class="card-header bg-white border-0 text-center py-4">
                    <h3 class="mb-0"><i class="fas fa-sign-in-alt me-2 text-primary"></i>Вход в систему</h3>
                </div>
                <div class="card-body px-4 py-4">
                    <form method="post">
                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <div>Неверный логин или пароль</div>
                            </div>
                        }
                        
                        <div class="mb-3">
                            <label asp-for="Input.UserName" class="form-label fw-semibold">
                                <i class="fas fa-user me-1 text-muted"></i>Логин
                            </label>
                            <input asp-for="Input.UserName" class="form-control form-control-lg" placeholder="Введите логин" autofocus />
                            <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Input.Password" class="form-label fw-semibold">
                                <i class="fas fa-lock me-1 text-muted"></i>Пароль
                            </label>
                            <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Введите пароль" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Войти
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}