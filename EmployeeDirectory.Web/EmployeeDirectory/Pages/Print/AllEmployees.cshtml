@page
@model AllEmployeesModel
@{
    ViewData["Title"] = "Печать всех сотрудников";
    Layout = null; // Убираем основной layout для печати
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Справочник сотрудников - @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background: white;
            color: #333;
        }
        
        .print-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 3px solid #6f42c1;
            padding-bottom: 20px;
        }
        
        .print-header h1 {
            color: #6f42c1;
            margin: 0;
            font-size: 28px;
        }
        
        .print-header .subtitle {
            color: #666;
            margin-top: 10px;
            font-size: 16px;
        }
        
        .print-info {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #6f42c1;
        }
        
        .print-info p {
            margin: 5px 0;
            font-size: 14px;
        }
        
        .department-section {
            margin-bottom: 30px;
            page-break-inside: avoid;
        }
        
        .department-header {
            background: linear-gradient(45deg, #6f42c1, #5a2d91);
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
        }
        
        .department-header .badge {
            background: rgba(255, 255, 255, 0.2);
            padding: 5px 10px;
            border-radius: 15px;
            margin-right: 10px;
        }
        
        .employees-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            font-size: 12px;
        }
        
        .employees-table th {
            background: #f8f9fa;
            color: #495057;
            padding: 10px 8px;
            text-align: center;
            font-weight: bold;
            border: 1px solid #dee2e6;
        }
        
        .employees-table td {
            padding: 8px;
            border: 1px solid #dee2e6;
            text-align: center;
            vertical-align: middle;
        }
        
        .employees-table tr:nth-child(even) {
            background-color: #f8f9fa;
        }
        
        .position-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 10px;
            font-weight: bold;
            margin-right: 5px;
        }
        
        .position-head {
            background: linear-gradient(45deg, #ffc107, #e0a800);
            color: #212529;
        }
        
        .position-regular {
            background: linear-gradient(45deg, #007bff, #0056b3);
            color: white;
        }
        
        .employee-name {
            font-weight: bold;
            text-align: left;
        }
        
        .phone-number {
            font-family: 'Courier New', monospace;
            font-size: 11px;
        }
        
        .no-data {
            text-align: center;
            padding: 40px;
            color: #666;
            font-style: italic;
        }
        
        .summary {
            background: #e9ecef;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: center;
        }
        
        @@media print {
            body { margin: 0; padding: 15px; }
            .print-header { page-break-after: avoid; }
            .department-section { page-break-inside: avoid; }
            .employees-table { page-break-inside: auto; }
        }
    </style>
</head>
<body>
    <div class="print-header">
        <h1><i class="fas fa-users"></i> Справочник сотрудников</h1>
        <div class="subtitle">Полный список всех сотрудников - @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</div>
    </div>

    <div class="print-info">
        <p><strong>Тип отчета:</strong> Все сотрудники</p>
        <p><strong>Дата формирования:</strong> @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</p>
        <p><strong>Всего отделов:</strong> @Model.DepartmentGroups.Count()</p>
        <p><strong>Всего сотрудников:</strong> @Model.DepartmentGroups.Sum(g => g.Count())</p>
    </div>

    @if (Model.DepartmentGroups.Any())
    {
        <div class="summary">
            <h3>Сводка по отделам</h3>
            @foreach (var group in Model.DepartmentGroups)
            {
                <span style="margin-right: 20px;">
                    <strong>@group.Key:</strong> @group.Count() сотрудников
                </span>
            }
        </div>

        @foreach (var departmentGroup in Model.DepartmentGroups)
        {
            <div class="department-section">
                <div class="department-header">
                    <span class="badge">ОТДЕЛ</span>
                    @departmentGroup.Key
                </div>

                <table class="employees-table">
                    <thead>
                        <tr>
                            <th style="width: 50%;">Должность / ФИО</th>
                            <th style="width: 25%;">Городской номер</th>
                            <th style="width: 25%;">Местный номер</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in departmentGroup.OrderBy(e => e.IsHeadOfDepartment ? 0 : 1).ThenBy(e => e.FullName))
                        {
                            <tr>
                                <td class="employee-name">
                                    @if (!string.IsNullOrEmpty(employee.PositionDescription))
                                    {
                                        <span class="position-badge @(employee.IsHeadOfDepartment ? "position-head" : "position-regular")">
                                            @employee.PositionDescription
                                        </span>
                                    }
                                    @if (!string.IsNullOrEmpty(employee.FullName))
                                    {
                                        <strong>@employee.FullName</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">-</span>
                                    }
                                </td>
                                <td class="phone-number">
                                    @(employee.CityPhone ?? "Не указано")
                                </td>
                                <td class="phone-number">
                                    @(employee.LocalPhone ?? "-")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <div class="no-data">
            <h3>Нет данных для отображения</h3>
            <p>Сотрудники не найдены.</p>
        </div>
    }
</body>
</html>
