@page
@model EmployeeDirectory.Pages.Print.PrintLogsModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]
@{
    ViewData["Title"] = "Печать логов";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Логи системы - Печать</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background: white !important;
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .print-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            color: white;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
        }
        
        .print-filters {
            background: #f8f9fa;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 6px;
            border-left: 4px solid #667eea;
        }
        
        .table {
            font-size: 12px;
        }
        
        .table th {
            background-color: #343a40 !important;
            color: white !important;
            border: 1px solid #dee2e6 !important;
            padding: 8px !important;
            font-size: 11px;
        }
        
        .table td {
            border: 1px solid #dee2e6 !important;
            padding: 6px !important;
            font-size: 11px;
        }
        
        .table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }
        
        .no-data {
            text-align: center;
            padding: 40px;
            color: #6c757d;
            font-style: italic;
        }
        
        @@media print {
            body {
                margin: 0;
                padding: 10px;
            }
            
            .print-header {
                background: #667eea !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            
            .table th {
                background-color: #343a40 !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            
            .table tbody tr:nth-child(even) {
                background-color: #f8f9fa !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="print-header">
            <h2><i class="fas fa-clipboard-list me-2"></i>Логи системы</h2>
            <p class="mb-0">Отчет сгенерирован: @DateTime.Now.ToString("dd.MM.yyyy HH:mm:ss")</p>
        </div>
        
        @if (Model.HasFilters)
        {
            <div class="print-filters">
                <h6><i class="fas fa-filter me-1"></i>Примененные фильтры:</h6>
                <div class="row">
                    @if (!string.IsNullOrEmpty(Model.Q))
                    {
                        <div class="col-md-6">
                            <strong>Поиск:</strong> "@Model.Q"
                        </div>
                    }
                    @if (Model.From.HasValue)
                    {
                        <div class="col-md-3">
                            <strong>От даты:</strong> @Model.From.Value.ToString("dd.MM.yyyy")
                        </div>
                    }
                    @if (Model.To.HasValue)
                    {
                        <div class="col-md-3">
                            <strong>До даты:</strong> @Model.To.Value.ToString("dd.MM.yyyy")
                        </div>
                    }
                </div>
            </div>
        }
        
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 15%;">Дата/время (UTC)</th>
                        <th style="width: 15%;">Пользователь</th>
                        <th style="width: 15%;">Действие</th>
                        <th style="width: 20%;">Сущность</th>
                        <th style="width: 35%;">Детали</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        @foreach (var log in Model.Items)
                        {
                            <tr>
                                <td>@log.TimestampUtc.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                <td>@log.UserName</td>
                                <td>@log.Action</td>
                                <td>@log.EntityType (@log.EntityId)</td>
                                <td>@log.Details</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="no-data">
                                <i class="fas fa-info-circle me-2"></i>
                                @if (Model.HasFilters)
                                {
                                    <text>Логи не найдены по заданным фильтрам</text>
                                }
                                else
                                {
                                    <text>Логи отсутствуют</text>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (Model.Items.Any())
        {
            <div class="mt-3 text-muted small">
                <i class="fas fa-info-circle me-1"></i>
                Всего записей: @Model.Items.Count
                @if (Model.HasFilters)
                {
                    <text> (отфильтровано)</text>
                }
            </div>
        }
    </div>
    
    <script>
        window.onload = function() {
            setTimeout(function() {
                window.print();
            }, 500);
        };
        
        window.onafterprint = function() {
            window.close();
        };
    </script>
</body>
</html>