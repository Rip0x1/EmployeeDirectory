@page
@model DeleteModel
@{
    ViewData["Title"] = "Удалить сотрудника";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-user-times me-2"></i>Удалить сотрудника</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Внимание!</strong> Вы уверены, что хотите удалить этого сотрудника? Это действие нельзя отменить.
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-user me-1"></i>ФИО:</h6>
                            <p class="fw-bold">@Model.Employee.FullName</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-building me-1"></i>Отдел:</h6>
                            <p>@Model.Employee.Department?.Name</p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-phone me-1"></i>Городской номер:</h6>
                            <p>@(Model.Employee.CityPhone ?? "-")</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-phone me-1"></i>Местный номер:</h6>
                            <p>@(Model.Employee.LocalPhone ?? "-")</p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-user-tie me-1"></i>Должность:</h6>
                            <p>@(!string.IsNullOrEmpty(Model.Employee.PositionDescription) ? Model.Employee.PositionDescription : Model.Employee.Position?.Name ?? "-")</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-crown me-1"></i>Статус:</h6>
                            <p>
                                @if (Model.Employee.IsHeadOfDepartment)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-crown me-1"></i>Начальник отдела
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Обычный сотрудник</span>
                                }
                            </p>
                        </div>
                    </div>
                    
                    <form method="post">
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" href="@(Model.ReturnUrl ?? Request.Headers["Referer"].ToString() ?? Url.Page("/Index"))">
                                <i class="fas fa-arrow-left me-1"></i>Отмена
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Да, удалить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

