@page
@model EmployeeDirectory.Pages.Departments.EditEditorModel
@{
    ViewData["Title"] = "Редактировать редактора";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-edit me-2"></i>Редактировать редактора</h2>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="EditorId" />
                        <input type="hidden" asp-for="DepartmentId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Доменный логин (из выпадающего списка, опционально)</label>
                                    <select class="form-select" id="DomainAccountsSelect" onchange="(function(){var v=this.value; if(v){ var u=document.getElementById('Input_UserName'); if(u){u.value=v;} } }).call(this)">
                                        <option value="">— Выберите доменный логин —</option>
                                        @foreach (var acc in Model.DomainAccounts)
                                        {
                                            <option value="@acc">@acc</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.UserName" class="form-label">
                                        <i class="fas fa-user me-2"></i>Логин
                                    </label>
                                    <input asp-for="Input.UserName" class="form-control" id="Input_UserName" placeholder="DOMAIN\\логин или ИМЯПК\\логин" />
                                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.FullName" class="form-label">
                                        <i class="fas fa-id-card me-2"></i>Полное имя
                                    </label>
                                    <input asp-for="Input.FullName" class="form-control" placeholder="Введите полное имя" />
                                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-building me-2"></i>Отдел
                                    </label>
                                    <input type="text" class="form-control" value="@Model.DepartmentName" readonly />
                                    <input type="hidden" asp-for="DepartmentName" />
                                </div>
                            </div>
                        </div>


                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Сохранить изменения
                            </button>
                            <a asp-page="/Departments/ManageEditors" asp-route-departmentId="@Model.DepartmentId" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
