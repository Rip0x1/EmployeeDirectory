@page
@model EmployeeDirectory.Pages.Departments.ManageEditorsModel
@{
    ViewData["Title"] = "Управление редакторами отдела";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users-cog me-2"></i>Управление редакторами отдела</h2>
                <div class="d-flex gap-2">
                    <a asp-page="/Departments/AddEditor" asp-route-departmentId="@Model.DepartmentId" class="btn btn-success">
                        <i class="fas fa-user-plus me-2"></i>Добавить редактора
                    </a>
                    <a asp-page="/Departments/Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Назад к отделу
                    </a>
                </div>
            </div>

            @if (Model.Editors.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <div class="table-container">
                                <table class="table mb-0">
                                    <thead class="table-dark sticky-header">
                                        <tr>
                                            <th class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important; border-bottom: 2px solid rgb(33, 37, 41) !important;">Логин</th>
                                            <th class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important; border-bottom: 2px solid rgb(33, 37, 41) !important;">Полное имя</th>
                                            <th class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important; border-bottom: 2px solid rgb(33, 37, 41) !important;">Дата создания</th>
                                            <th class="text-center" style="border-bottom: 2px solid rgb(33, 37, 41) !important;">Действия</th>
                                        </tr>
                                    </thead>
                                <tbody>
                                    @foreach (var editor in Model.Editors)
                                    {
                                        <tr>
                                            <td class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important;">
                                                <strong>@editor.UserName</strong>
                                            </td>
                                            <td class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important;">@editor.FullName</td>
                                            <td class="text-center" style="border-right: 3px solid rgb(33, 37, 41) !important;">@editor.CreatedAt.ToString("dd.MM.yyyy")</td>
                                            <td class="text-center">
                                                <div class="d-flex gap-2 justify-content-center">
                                                    <a asp-page="/Departments/EditEditor" asp-route-id="@editor.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-edit me-1"></i>Изменить
                                                    </a>
                                                    <a asp-page="/Departments/DeleteEditor" asp-route-id="@editor.Id" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash me-1"></i>Удалить
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-users-cog fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Редакторы не найдены</h5>
                        <p class="text-muted">В этом отделе пока нет редакторов</p>
                        <a asp-page="/Departments/AddEditor" asp-route-departmentId="@Model.DepartmentId" class="btn btn-success">
                            <i class="fas fa-user-plus me-2"></i>Добавить первого редактора
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
