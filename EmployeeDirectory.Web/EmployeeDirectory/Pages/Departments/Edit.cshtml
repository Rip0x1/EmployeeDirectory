@page "{id:int}"
@model EmployeeDirectory.Pages.Departments.EditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]
@{
    ViewData["Title"] = "Редактировать отдел";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-sitemap me-2"></i>Редактировать отдел</h2>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Department.Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Department.Name" class="form-label">
                                    <i class="fas fa-building me-1"></i>Сокращенное название отдела *
                                </label>
                                <input asp-for="Department.Name" class="form-control" placeholder="Введите сокращенное название отдела" />
                                <span asp-validation-for="Department.Name" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Department.HeadId" class="form-label">
                                    <i class="fas fa-user-tie me-1"></i>Руководитель отдела
                                </label>
                                <select asp-for="Department.HeadId" class="form-select" asp-items="Model.Employees">
                                    <option value="">— Не назначен —</option>
                                </select>
                                <span asp-validation-for="Department.HeadId" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Department.FullName" class="form-label">
                                    <i class="fas fa-building me-1"></i>Полное название отдела
                                </label>
                                <input asp-for="Department.FullName" class="form-control" placeholder="Введите полное название" />
                                <span asp-validation-for="Department.FullName" class="text-danger"></span>
                                <small class="form-text text-muted">Необязательное поле</small>
                            </div>
                            
                            
                        </div>
                        
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Сохранить изменения
                            </button>
                            <a class="btn btn-secondary" href="@(Model.ReturnUrl ?? Url.Page("/Departments/Manage"))">
                                <i class="fas fa-times me-2"></i>Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

