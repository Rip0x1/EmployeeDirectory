@page "{id:int}"
@model EmployeeDirectory.Pages.Departments.EditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]
@{
    ViewData["Title"] = "Редактировать отдел";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-sitemap me-2"></i>Редактировать отдел</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Department.Id" />
                        <div class="mb-3">
                            <label asp-for="Department.Name" class="form-label"></label>
                            <input asp-for="Department.Name" class="form-control" />
                            <span asp-validation-for="Department.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Department.HeadId" class="form-label">Руководитель отдела</label>
                            <select asp-for="Department.HeadId" class="form-select" asp-items="Model.Employees">
                                <option value="">— Не назначен —</option>
                            </select>
                            <span asp-validation-for="Department.HeadId" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <a class="btn btn-secondary" href="@(Model.ReturnUrl ?? Url.Page("/Departments/Manage"))">Отмена</a>
                            <button type="submit" class="btn btn-warning">Сохранить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


